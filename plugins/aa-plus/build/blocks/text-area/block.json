{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "aa-plus/text-area",
  "title": "AA Text Area",
  "category": "layout",
  "icon": "star-filled",
  "description": "Adds a theme formatted area for text",
  "keywords": [
    "text",
    "background"
  ],
  "version": "1",
  "textdomain": "aa-plus",
  "editorScript": "file:./index.js",
  "attributes": {
    "bgColor": {
      "type": "string",
      "default": "#ffffff"
    },
    "textColor": {
      "type": "string",
      "default": "#000 "
    }
  },
  "supports": {
    "html": false
  }
}